<%- model_class = Place -%>
<div id="place" class="panel" lat="<%= @place.coordinates.lat %>" lon="<%= @place.coordinates.lon %>">
	<div class="contents">

		<div class="page-header">
		  <h1><%= t('views.places.show.title') %></h1>
		</div>

		<dl class="dl-horizontal">
		  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
		  <dd><%= @place.name %></dd>
		  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
		  <dd><%= @place.humanized_category %></dd>
		  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
		  <dd><%= @place.humanized_description %></dd>
		  <dt><strong><%= model_class.human_attribute_name(:coordinates) %>:</strong></dt>
		  <dd><%= @place.humanized_coordinates %></dd>
		</dl>

		<div style="width:100%; height:250px; margin-top: 20px" id="map" class="show-only"></div>

		<div class="form-actions">
		  <%= link_to t('views.commons.actions.back'),
		              places_path, :class => 'btn'  %>
		  <%= link_to t('views.commons.actions.edit'),
		              edit_place_path(@place), :class => 'btn' %>
		  <%= link_to t('views.commons.actions.destroy'),
		              place_path(@place),
		              :method => 'delete',
		              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
		              :class => 'btn btn-danger' %>
		</div>
	</div>
</div>